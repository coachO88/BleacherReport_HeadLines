<a href="/favorite"><h1>SAVED</h1></a>
{{#each data}}
<section>
   <div class="row">
      <div class="col">
         <div class="post-preview">
            <a href="https://www.bleacherreport.com{{this.sportURL}}" target="_blank" >
               <img alt="IMAGE NULL" srcset="{{this.sportImage}}">
                  <h2 class="post-title">
                     {{this.sportHeadline}}
                  </h2>
               </img>
            </a>
            <div class="row">
               <div class="col-10">
                  <h6 class="post-subtitle" style="font-size: smaller">
                     {{this.sportHeadline}}
                  </h6>
               </div>
               <div class="col-2">
                  <form action="/favorite/{{this._id}}/{{this.sportHeadline}}" method="post">
                     <button type="submit" class="btn btn-info btn-md" style="border-radius: 1vw;">SAVE</button>
                  </form>
               </div>
            </div>
         </div>
         <hr>
      </div>
   </div>
</section>
{{/each}}